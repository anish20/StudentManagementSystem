@model Users;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/login_style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400&display=swap" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <title>LoginAuthentication</title>
</head>
<body>
    <div class="wrapper">
        <div class="login-body">
          
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="box-container">
                       <div class="message_section">
                           @if (ViewBag.Error != null)
                           {
                           <div class="alert alert-danger fade show" role="alert">
                               <span> <i class="fa fa-window-close-o"></i> &nbsp; @ViewBag.Error</span>
                               <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                   <span aria-hidden="true">&times;</span>
                               </button>
                           </div>
                           }
                       </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="user-logo"><center><i class="fa fa-user-circle fa-5x"></i></center></div>
                                <form asp-action="LoginAuthentication" asp-controller="Account" method="post" >
                                <div class="form-body">
                                    <div class="form-group">
                                        <div class="input-group  mr-sm-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-user"></i></div>
                                            </div>
                                            <input type="text" asp-for="UserName" class="form-control" placeholder="Username" required="">
                                        </div>
                                        <div id="username_error"></div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group  mr-sm-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-lock"></i></div>
                                            </div>
                                            <input type="password"asp-for="Password" class="form-control" name="Password" id="Password" placeholder="Password" required="">
                                        </div>
                                        <div id="password_error"></div>
                                    </div>
                                    <div class="form-groups">
                                        <button class="btn btn-block btn-success" type="submit" >Login</button>
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



   
</body>
</html>
